<section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>
<% if enhanced_cart.length == 0 %>
  <div>
  <p> There is nothing in the cart </p>
  <a href="/">Home</a>
  </div>
  <% else %>
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        # <% raise enhanced_cart.inspect %>
        
        #  [{:product=>#<Product id: 10, name: "Optimal Sleeping Bed", description: "Slow-carb sartorial muggle magic cleanse disrupt. ...", image: "furniture1.jpg", price_cents: 305200, quantity: 320, created_at: "2021-07-23 18:06:01", updated_at: "2021-07-23 18:06:01", category_id: 3>, :quantity=>1}]

        <% enhanced_cart.each do |item| %>
          <%= render 'item', product: item[:product], quantity: item[:quantity].to_i %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
           $ <%= cart_subtotal_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= form_tag orders_path do %>
        <script
          src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-amount="<%= cart_subtotal_cents %>"
          data-name="Jungle"
          data-description="Your Jungle Order"
          data-locale="auto"
          data-email="kvirani@gmail.com"
          data-currency="cad">
        </script>
      <% end %>
    </div>
  </div>
  <% end %>
</section>
